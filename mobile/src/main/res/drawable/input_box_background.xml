<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/inputBoxBackground" /> <!-- Should be cyberpunk_secondary_dark -->
            <corners android:radius="@dimen/reg_24dp" />
            <stroke android:width="2dp" android:color="@color/cyberpunk_accent_cyan" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/wdSecondaryInvertedColor" /> <!-- Should be themed disabled color -->
            <corners android:radius="@dimen/reg_24dp" />
            <stroke android:width="1dp" android:color="#44E0E0E0" /> <!-- Faint border for disabled -->
        </shape>
    </item>
    <item> <!-- Default enabled, not focused -->
        <shape android:shape="rectangle">
            <solid android:color="?attr/inputBoxBackground" /> <!-- Should be cyberpunk_secondary_dark -->
            <corners android:radius="@dimen/reg_24dp" />
            <stroke android:width="1dp" android:color="@color/cyberpunk_glow_cyan" /> <!-- Subtle glow border for enabled -->
        </shape>
    </item>
</selector>
