<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4DFF00FF" /> <!-- 30% alpha cyberpunk_accent_pink -->
            <stroke android:width="1dp" android:color="@color/cyberpunk_accent_pink" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_activated="true"> <!-- Often used for selected state in lists -->
        <shape android:shape="rectangle">
            <solid android:color="#3300FFFF" /> <!-- 20% alpha cyberpunk_accent_cyan -->
            <stroke android:width="1dp" android:color="@color/cyberpunk_accent_cyan" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#3300FFFF" /> <!-- 20% alpha cyberpunk_accent_cyan -->
            <stroke android:width="1dp" android:color="@color/cyberpunk_accent_cyan" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <!-- Default state: transparent or a very subtle dark background -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
             <!-- Optional: add a very faint border for all items if desired -->
            <!-- <stroke android:width="1dp" android:color="#1AFFFFFF" /> -->
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>
