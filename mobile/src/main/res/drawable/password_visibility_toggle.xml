<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
        android:drawable="@drawable/ic_show_password" /> <!-- Eye open, password visible -->
    <item android:state_checked="false"
        android:drawable="@drawable/ic_hide_password" /> <!-- Eye slashed, password hidden -->
    <item android:drawable="@drawable/ic_hide_password" /> <!-- Default to hidden -->
</selector>
