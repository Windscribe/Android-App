<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/nav_bar"
    style="@style/MatchWrapContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:transitionName="nav">

    <ImageButton
        android:id="@+id/nav_button"
        style="@style/navArrowButton"
        android:layout_marginTop="@dimen/margin_48"
        android:contentDescription="@string/image_description"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_title"
        style="@style/titleText"
        android:layout_width="0dp"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/reg_40dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/nav_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nav_button"
        app:layout_constraintTop_toTopOf="@id/nav_button"
        tools:text="Preferences" />
</androidx.constraintlayout.widget.ConstraintLayout>