<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_protocol_switch"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/capsule_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/protocol_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/reg_16dp"
        android:drawablePadding="@dimen/reg_8dp"
        android:fontFamily="@font/ibm_plex_sans_regular"
        android:textColor="#ffef02"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/ic_info_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/protocol_recycle_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/reg_16dp"
        android:layout_marginStart="@dimen/reg_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/protocol_timer" />


</androidx.constraintlayout.widget.ConstraintLayout>