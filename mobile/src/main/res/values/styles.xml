<resources>
    <!--Cyberpunk App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/cyberpunk_accent_pink</item>
        <item name="colorPrimaryDark">@color/cyberpunk_primary_dark</item> <!-- For status bar, etc. -->
        <item name="colorAccent">@color/cyberpunk_accent_cyan</item> <!-- General accent color -->
        <item name="android:windowBackground">@color/cyberpunk_primary_dark</item> <!-- App background -->
        <item name="android:textColor">@color/cyberpunk_text_light</item> <!-- Default text color -->
        <item name="android:fontFamily">@font/space_mono_family</item> <!-- Default app font -->

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_left</item>
        <item name="android:windowExitTransition">@android:transition/slide_right</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/fade</item>
        <item name="android:statusBarColor">@color/cyberpunk_primary_dark</item> <!-- Status bar color -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/cyberpunk_primary_dark</item> <!-- Navigation bar color -->

        <!-- Cyberpunk specific attributes -->
        <item name="warningTitleColor">@color/cyberpunk_accent_yellow</item>
        <item name="overlayContainerBackground">@color/cyberpunk_secondary_dark</item> <!-- e.g. modals, dialogs -->
        <item name="progressTextColor">@color/cyberpunk_text_light</item>
        <item name="progressBarTint">@color/cyberpunk_accent_cyan</item>
        <item name="pageDescriptionTextColor">@color/cyberpunk_text_light</item>
        <item name="serverListUnderMaintenanceIconColor">@color/cyberpunk_accent_yellow</item>
        <item name="toolTipDialogBackgroundColor">@color/cyberpunk_secondary_dark</item>
        <item name="toolTipDialogTextColor">@color/cyberpunk_text_light</item>
        <item name="menu_edit_background">@color/cyberpunk_secondary_dark</item>
        <item name="overlayDialogBackgroundColor">#CC200020</item> <!-- 80% alpha of primary dark -->
        <item name="wdSecondaryColor">@color/cyberpunk_text_light</item> <!-- secondary text/icons -->
        <item name="wdPrimaryColor">@color/cyberpunk_accent_pink</item> <!-- primary text/icons or highlights -->
        <item name="wdPrimaryColor10">#1AFF00FF</item> <!-- 10% alpha pink -->
        <item name="wdPrimaryInvertedColor">@color/cyberpunk_primary_dark</item>
        <item name="wdSecondaryInvertedColor">#80200020</item> <!-- 50% alpha primary dark -->
        <item name="preferencesRoundedBackgroundColor">@color/cyberpunk_secondary_dark</item>
        <item name="wdPrimaryColor25">#40FF00FF</item> <!-- 25% alpha pink -->
        <item name="wdActionColor">@color/cyberpunk_accent_cyan</item> <!-- Main action buttons -->
        <item name="wdActionColor10">#1A00FFFF</item> <!-- 10% alpha cyan -->
        <item name="wdActionColor25">#4000FFFF</item> <!-- 25% alpha cyan -->
        <item name="wdActionColor50">#8000FFFF</item> <!-- 50% alpha cyan -->
        <item name="wdWarningColor">@color/cyberpunk_accent_yellow</item> <!-- Warning messages/icons -->
        <item name="wdWarningColor10">#1AFFFF00</item> <!-- 10% alpha yellow -->
        <item name="wdWarningColor50">#80FFFF00</item> <!-- 50% alpha yellow -->
        <item name="iconRippleColor">#4D00FFFF</item> <!-- 30% alpha of cyberpunk_accent_cyan -->
        <item name="navigationStripColor">@color/cyberpunk_accent_cyan</item>
        <item name="notificationBackground">@color/cyberpunk_secondary_dark</item>
        <item name="preferenceIconColor">@color/cyberpunk_accent_cyan</item>
        <item name="dropDownIconColor">@color/cyberpunk_accent_cyan</item>
        <item name="serverListSearchView">@color/cyberpunk_secondary_dark</item>
        <item name="inputTextHintColor">#B3E0E0E0</item> <!-- 70% alpha cyberpunk_text_light -->
        <item name="inputTextColor">@color/cyberpunk_text_light</item>
        <item name="inputDescriptionColor">#B3E0E0E0</item> <!-- 70% alpha cyberpunk_text_light -->
        <item name="inputBoxBackground">@color/cyberpunk_secondary_dark</item>
        <!-- For list items -->
        <item name="nodeListGroupTextColor">@color/cyberpunk_text_light</item>
        <item name="nodeStrengthTextColor">@color/cyberpunk_accent_pink</item>
        <item name="dividerHorizontalColor">@color/cyberpunk_glow_cyan</item>
        <item name="alphaBlueDrawable">@drawable/cyberpunk_alpha_blue_background</item>
    </style>

