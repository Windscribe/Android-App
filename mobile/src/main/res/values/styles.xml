<resources>
    <!--App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_left</item>
        <item name="android:windowExitTransition">@android:transition/slide_right</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/fade</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorDeepBlue</item>
    </style>

    <!-- Dark theme -->
    <style name="DarkTheme" parent="AppTheme">
        <item name="warningTitleColor">@color/colorWhite</item>
        <item name="overlayContainerBackground">@color/colorDeepBlue95</item>
        <item name="progressTextColor">@color/colorWhite50</item>
        <item name="progressBarTint">@color/colorWhite</item>
        <item name="pageDescriptionTextColor">@color/colorWhite</item>
        <item name="serverListUnderMaintenanceIconColor">@color/colorWhite</item>
        <item name="toolTipDialogBackgroundColor">@color/colorDeepBlue</item>
        <item name="toolTipDialogTextColor">@color/colorWhite</item>
        <item name="menu_edit_background">@color/colorWhite5</item>
        <item name="overlayDialogBackgroundColor">@color/colorDeepBlue80</item>
        <item name="wdSecondaryColor">@color/colorWhite50</item>
        <item name="wdPrimaryColor">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="wdPrimaryColor10">@color/colorWhite10</item>
        <item name="wdPrimaryInvertedColor">@color/colorDeepBlue</item>
        <item name="wdSecondaryInvertedColor">@color/colorDeepBlue50</item>
        <item name="preferencesRoundedBackgroundColor">@color/colorWhite8</item>
        <item name="wdPrimaryColor25">@color/colorWhite25</item>
        <item name="wdActionColor">@color/colorNeonGreen</item>
        <item name="wdActionColor10">@color/colorNeonGreen10</item>
        <item name="wdActionColor25">@color/colorNeonGreen25</item>
        <item name="wdActionColor50">@color/colorNeonGreen50</item>
        <item name="wdWarningColor">@color/colorYellow</item>
        <item name="wdWarningColor10">@color/colorYellow10</item>
        <item name="wdWarningColor50">@color/colorYellow50</item>

    </style>

    <!--Light Theme -->
    <style name="LightTheme" parent="AppTheme">
        <item name="warningTitleColor">@color/colorDeepBlue</item>
        <item name="overlayContainerBackground">@color/colorWhite95</item>
        <item name="progressTextColor">@color/colorDeepBlue50</item>
        <item name="progressBarTint">@color/colorDeepBlue</item>
        <item name="pageDescriptionTextColor">@color/colorDeepBlue</item>
        <item name="serverListUnderMaintenanceIconColor">@color/colorDeepBlue40</item>
        <item name="toolTipDialogBackgroundColor">@color/colorWhite95</item>
        <item name="toolTipDialogTextColor">@color/colorDeepBlue</item>
        <item name="menu_edit_background">@color/colorDeepBlue5</item>
        <item name="overlayDialogBackgroundColor">@color/colorWhite80</item>
        <item name="wdSecondaryColor">@color/colorDeepBlue50</item>
        <item name="wdPrimaryColor">@color/colorDeepBlue</item>
        <item name="colorAccent">@color/colorDeepBlue</item>
        <item name="wdPrimaryColor10">@color/colorDeepBlue10</item>
        <item name="wdPrimaryInvertedColor">@color/colorWhite</item>
        <item name="preferencesRoundedBackgroundColor">@color/colorDeepBlue8</item>
        <item name="wdSecondaryInvertedColor">@color/colorWhite50</item>
        <item name="wdPrimaryColor25">@color/colorDeepBlue25</item>
        <item name="wdActionColor">@color/colorNavyBlue</item>
        <item name="wdActionColor10">@color/colorNavyBlue10</item>
        <item name="wdActionColor25">@color/colorNavyBlue25</item>
        <item name="wdActionColor50">@color/colorNavyBlue50</item>
        <item name="wdWarningColor">@color/colorOrange</item>
        <item name="wdWarningColor10">@color/colorOrange10</item>
        <item name="wdWarningColor50">@color/colorOrange50</item>
    </style>

    <style name="AppTheme.WindLauncher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorDeepBlue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_static</item>
        <item name="windowSplashScreenAnimationDuration">1025</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.Transparent" />


    <style name="FullScreenWithNoStatusBar" parent="FullScreenDialog">
        <item name="android:statusBarColor">@color/colorDeepBlue95</item>
    </style>

    <style name="WrapWrapContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrapContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatchContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:background">@color/colorDeepBlue95</item>
    </style>

    <style name="OverlayContainer" parent="MatchMatchContainer">
        <item name="android:background">@color/colorDeepBlue95</item>
    </style>

    <style name="navArrowButton" parent="WrapWrapContainer">
        <item name="android:minWidth">@dimen/reg_16dp</item>
        <item name="android:minHeight">@dimen/reg_16dp</item>
        <item name="android:src">@drawable/ic_back_button</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:background">@drawable/ripple_round</item>
        <item name="android:contentDescription">@string/image_description</item>
    </style>

    <style name="titleText" parent="WrapWrapContainer">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ibm_plex_sans_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NextButton" parent="MatchWrapContainer">
        <item name="android:minHeight">@dimen/reg_48dp</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
        <item name="android:text">@string/next</item>
        <item name="android:textColor">@drawable/next_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingTop">@dimen/padding_14</item>
        <item name="android:paddingBottom">@dimen/padding_14</item>
        <item name="android:enabled">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
        <item name="android:background">@drawable/next_button_ripple</item>
    </style>

    <style name="WarningActionButton" parent="NextButton">
        <item name="android:background">@drawable/warning_action_ripple</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
    </style>

    <style name="RadioOption" parent="WrapWrapContainer">
        <item name="android:text">@string/two_fa</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@drawable/radio_button_background</item>
        <item name="android:checked">false</item>
        <item name="android:paddingStart">@dimen/margin_8</item>
        <item name="android:paddingEnd">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/colorWhite50</item>
        <item name="fontFamily">@font/ibm_plex_sans_bold</item>
    </style>

    <style name="IconStyle" parent="WrapWrapContainer">
        <item name="android:src">@drawable/ic_check</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="NoBackgroundButtonBold" parent="WrapWrapContainer">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontFamily">@font/ibm_plex_sans_bold</item>
        <item name="android:textColor">@color/colorWhite50</item>
        <item name="android:background">@drawable/ripple_square</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ProgressBar" parent="WrapWrapContainer">
        <item name="android:indeterminateTint">?progressBarTint</item>

    </style>

    <style name="ProgressText" parent="WrapWrapContainer">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?progressTextColor</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_marginTop">@dimen/reg_8dp</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="WarningIcon" parent="WrapWrapContainer">
        <item name="android:src">@drawable/ic_noemailprompticon</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
        <item name="android:contentDescription">@string/image_description</item>
    </style>

    <style name="WarningText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/colorWhite50</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
    </style>

    <style name="ForwardArrowIcon" parent="WrapWrapContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/reg_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:src">@drawable/ic_forward_arrow_settings</item>
        <item name="android:contentDescription">@string/image_description</item>
    </style>

    <style name="MenuItemLabel" parent="WrapWrapContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ibm_font_family</item>
        <item name="android:gravity">left|top</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorWhite50</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommunityLinkLabel" parent="MenuItemLabel">
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/colorWhite80</item>
    </style>

    <style name="MenuItemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/reg_48dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="dialog_button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
    </style>

    <style name="OverlayAlert" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/darkGray</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ModelCloseIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_48</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:rotationY">@integer/rtl_support_auto_mirror_flip</item>
        <item name="android:src">@drawable/ic_modal_close_button</item>
    </style>


    <style name="DialogTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_32</item>
        <item name="android:layout_marginStart">@dimen/reg_68dp</item>
        <item name="android:layout_marginEnd">@dimen/reg_68dp</item>
    </style>

    <style name="DialogDescription">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/colorWhite50</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:layout_marginStart">@dimen/reg_68dp</item>
        <item name="android:layout_marginEnd">@dimen/reg_68dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogPrimaryButton" parent="NextButton">
        <item name="android:layout_marginTop">@dimen/margin_32</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="DialogSecondaryButton" parent="NoBackgroundButtonBold">
        <item name="android:layout_marginTop">@dimen/margin_32</item>
    </style>

    <style name="DialogExplainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorWhite50</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
    </style>


    <!-- OpenVPN -->
    <style name="blinkt.dialog" parent="android:Theme.DeviceDefault.Light.Dialog" />

    <!-- Style for Title TextView -->
    <style name="FeatureTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!-- Style for Subtitle TextView -->
    <style name="FeatureSubtitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorWhite50</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <!-- Style for ImageView -->
    <style name="FeatureImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:src">@drawable/ic_star</item>
    </style>

    <!-- Common container style -->
    <style name="PlanContainerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">142dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:padding">@dimen/padding_8</item>
    </style>

    <!-- Common title style -->
    <style name="PlanTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
    </style>

    <!-- Common price style -->
    <style name="PlanPriceStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
    </style>

    <style name="PlanDiscountStyle">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDeepNavy</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
    </style>

    <style name="PromoDiscountStyle" parent="PlanDiscountStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_32</item>
        <item name="android:background">@drawable/promo_background</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Common billed description style -->
    <style name="PlanBilledStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:paddingBottom">@dimen/padding_16</item>
    </style>

</resources>
