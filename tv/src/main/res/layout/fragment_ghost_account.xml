<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false">

        <TextView
            android:id="@+id/label"
            style="@style/ButtonLabel"
            android:layout_marginStart="170dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="170dp"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/ghost_account_sign_up"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/claimAccount"
            style="@style/LargeRoundedButton"
            android:layout_marginStart="@dimen/reg_40dp"
            android:layout_marginTop="@dimen/reg_40dp"
            android:layout_marginEnd="@dimen/reg_40dp"
            android:focusable="true"
            android:text="@string/claim_account"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/label"
            app:layout_constraintStart_toStartOf="@id/label"
            app:layout_constraintTop_toBottomOf="@id/label" />

        <Button
            android:id="@+id/sign_up"
            style="@style/LargeRoundedButton"
            android:layout_marginStart="@dimen/reg_40dp"
            android:layout_marginTop="@dimen/reg_40dp"
            android:layout_marginEnd="@dimen/reg_40dp"
            android:focusable="true"
            android:text="@string/text_account_set_up"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/label"
            app:layout_constraintStart_toStartOf="@id/label"
            app:layout_constraintTop_toBottomOf="@id/label" />

        <Button
            android:id="@+id/login"
            style="@style/LargeRoundedButton"
            android:layout_marginStart="@dimen/reg_40dp"
            android:layout_marginTop="@dimen/reg_24dp"
            android:layout_marginEnd="@dimen/reg_40dp"
            android:focusable="true"
            android:text="@string/text_login"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/label"
            app:layout_constraintStart_toStartOf="@id/label"
            app:layout_constraintTop_toBottomOf="@id/sign_up" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>