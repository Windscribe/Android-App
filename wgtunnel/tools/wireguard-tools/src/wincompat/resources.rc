      VALUE "OriginalFilename", "wg.exe"
      VALUE "ProductName", "WireGuard"
      VALUE "ProductVersion", EXPAND(VERSION_STR)
      VALUE "Comments", "https://www.wireguard.com/"
    END
  END
  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x409, 0x4b0
  END
END
